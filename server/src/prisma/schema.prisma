generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Point {
  id      String   @id @default(uuid()) @db.Uuid
  coords  Json
  dicom   Dicom    @relation(fields: [dicomId], references: [id], onDelete: Cascade)
  dicomId String  @db.Uuid
}


model Dicom {
  id                  String   @id @default(uuid()) @db.Uuid
  imageId             String   
  FrameOfReferenceUID String
  annotationUID       String   @unique 
  toolName            String
  fileName            String   
  points              Point[]
}

